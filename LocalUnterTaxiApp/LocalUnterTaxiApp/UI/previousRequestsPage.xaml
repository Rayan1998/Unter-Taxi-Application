<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalUnterTaxiApp.previousRequestsPage"
             BackgroundColor="White">

    <ContentPage.Content>
        
        <ListView ItemsSource="{Binding Items}"
              CachingStrategy="RecycleElement"
              RowHeight="60">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Margin="8">

                            <Label TextColor="Black" Text="{Binding From_Location}"
                               FontAttributes="Bold" />
                            <Label TextColor="Black" Text="{Binding To_Location}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        
    </ContentPage.Content>

</ContentPage>